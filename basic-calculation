#!/bin/bash

while true; do
    echo "Calculator Menu:"
    echo "a. Add"
    echo "b. Subtract"
    echo "c. Multiply"
    echo "d. Divide"
    echo "e. Power of"
    echo "f. Modulus"
    echo "g. Exit"

    read -p "Select an option: " choice

    case $choice in
        a)
            read -p "Enter the first number: " num1
            read -p "Enter the second number: " num2
            result=$(($num1 + $num2))
            echo "Result: $result"
            ;;
        b)
            read -p "Enter the first number: " num1
            read -p "Enter the second number: " num2
            result=$(($num1 - $num2))
            echo "Result: $result"
            ;;
        c)
            read -p "Enter the first number: " num1
            read -p "Enter the second number: " num2
            result=$(($num1 * $num2))
            echo "Result: $result"
            ;;
        d)
            read -p "Enter the dividend: " num1
            read -p "Enter the divisor: " num2
            result=$(($num1 / $num2))
            echo "Result: $result"
            ;;
        e)
            read -p "Enter the base: " base
            read -p "Enter the exponent: " exponent
            result=$((base ** exponent))
            echo "Result: $result"
            ;;
        f)
            read -p "Enter the dividend: " num1
            read -p "Enter the divisor: " num2
            result=$(($num1 % $num2))
            echo "Result: $result"
            ;;
        g)
            echo "Exiting..."
            exit 0
            ;;
        *)
            echo "Invalid option. Please select a valid option."
            ;;
    esac

    echo
done
